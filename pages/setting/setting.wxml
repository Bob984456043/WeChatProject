<view class="container">
  <view bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
  <view class="list-container">
  <view class="list-item">
      <text class="list-name">选择单词书</text>
  </view>
  <radio-group bindchange="bookChange">
        <radio value="cet4" checked="true">cet4</radio><view></view>
        <radio value="cet4_import">cet4 import</radio><view></view>
        <radio value="cet6">cet6</radio><view></view>
        <radio value="cet6_import">cet6 import</radio><view></view>
        <radio value="kaoyan">考研</radio><view></view>
        <radio value="kaoyan_import">考研 import</radio><view></view>
  </radio-group>
  <view class="list-item" bindtap="showReward">
    <text class="list-name">赞赏作者</text>
    <image class="list-icon" src="/images/chevron.png"></image>
  </view>
  </view>
</view>